{
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js --dev",
    "start": "node server.js",
    "build": "npm run build:client && npm run build:server && mkdir -p dist && rm -rf dist/client && cp -r client/dist/client dist/client && mkdir -p client/dist && rm -rf client/dist/client && cp -r dist/client client/dist/client",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr /index.js",
    "devinstall": "zx ../../devinstall.mjs -- node server.js --dev",
    "lint": "eslint . --ext .js,.jsx --fix"
  },
  "dependencies": {
    "@upstash/redis": "^1.31.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "history": "^5.3.0",
    "minipass": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^7.7.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2"
  }
}
